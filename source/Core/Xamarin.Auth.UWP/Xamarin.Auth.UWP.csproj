<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- There appears to be an issue with multiple targets and the generated xaml bits (*.xbf, *.xr.xml) -->
    <!-- <TargetFrameworks>uap10.0.10240;uap10.0.16299</TargetFrameworks> -->
    <TargetFramework>uap10.0.10240</TargetFramework>
    <AssemblyName>Xamarin.Auth</AssemblyName>
    <RootNamespace>Xamarin.Auth</RootNamespace>
    <LangVersion>7.3</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <Title>Xamarin.Auth</Title>
    <Description>A cross-platform API for authenticating users and storing their accounts.</Description>
    <Product>$(AssemblyName) ($(TargetFramework))</Product>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <AssemblyFileVersion>1.0.0.0</AssemblyFileVersion>
    <Version>1.0.0</Version>
    <Authors>Microsoft</Authors>
    <NeutralLanguage>en</NeutralLanguage>
    <Copyright>Â© Microsoft Corporation. All rights reserved.</Copyright>
 </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MSBuild.Sdk.Extras" Version="1.6.55" PrivateAssets="All" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="Microsoft.NETCore.UniversalWindowsPlatform" Version="6.1.7" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Xamarin.Auth\**\*.cs" />
    <Page Include="**\*.xaml" Generator="MSBuild:Compile" SubType="Designer" />
  </ItemGroup>

  <Import Project="$(MSBuildSDKExtrasTargets)" Condition="Exists('$(MSBuildSDKExtrasTargets)')" />

</Project>
